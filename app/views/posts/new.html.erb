<h1>Posts#new</h1>
   


<%= form_for(@post) do |p| %>
<%= @post.errors.full_messages.join("<br />").html_safe %>
 <p>
 <%= p.label :titulo %> <br />
 <%= p.text_field :titulo %>
</p>
 
 <p>
 <%= p.label :mensaje %><br />
 <%= p.text_area :mensaje %>
</p>

<p>
	<%= p.submit 'Envia Post' %>
</p>
<% end %>
<p>Find me in app/views/posts/new.html.erb</p>
